;----------------------------------------------------------------------------------------------------------------------------------------
; 64BIT
;----------------------------------------------------------------------------------------------------------------------------------------
macro data.64.string name*, string* {
.data
    name dq string, 0
    name.length = $ - string
.text
}

macro data.64.unit name*, unit* {
.data
    name dq unit
    name.lenght = 1
.text
}
