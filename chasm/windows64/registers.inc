;----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
; PUSH & POP
;----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
macro stack [rxx] {
  forward push rxx
  common mov rbp, rsp
}
macro unstack [rxx] {
  common mov rsp, rbp
  reverse pop rxx
}
;----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
; RETURN REGISTER
;----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
macro return.value register {
  mov rax, register
}
macro return.to register {
  mov register, rax
}
